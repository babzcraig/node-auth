extends layout

block content
    h1 Register
    p Please register using the form below
    form(method='post', action='/users/register', enctype='multipart/form-data')
        .form-group
            label Name
            input.form-control(type='text', name='name', placeholder='Enter name')
        .form-group
            label Email
            input.form-control(type='email', name='email', placeholder='Enter email')
        .form-group
            label Username
            input.form-control(type='text', name='username', placeholder='Choose a username')
        .form-group
            label Password
            input.form-control(type='password', name='password', placeholder='Choose a password')
        .form-group
            label Confirm Password
            input.form-control(type='password', name='password2', placeholder='Confirm password')
        .form-group
            label Profile Image
            input.form-control(type='file', name='profileImage')
        input.btn.btn-default(type='submit', name='submit', value='Register')

