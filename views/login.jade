extends layout

block content
  h1 Login
  p Please login below
  form(method='POST', action='/users/login')
    .form-group
      label Username
      input.form-control(type='text', name='username')
    .form-group
      label Password
      input.form-control(type='password', name='password')
    input.btn.btn-default(type='submit', name='submit', value='Login')
