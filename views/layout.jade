doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    // The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags
    title Sample Express Website
    // Bootstrap core CSS
    link(href='/stylesheets/bootstrap.css', rel='stylesheet')
    // Custom styles for this template
    link(href='/stylesheets/style.css', rel='stylesheet')

  body
    nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') Node Auth
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            //li(class=( activeClass == 'Home' ? 'active' : ''  ))
            //  a(href='/') Home
            //li(class=( activeClass == 'About' ? 'active' : ''  ))
            //  a(href='/about') About
            //li(class=( activeClass == 'Contact' ? 'active' : ''  ))
            //  a(href='/contact') Contact
            li(class=( activeClass == 'Members' ? 'active' : ''  ))
              a(href='/') Members
            if !user
              li(class=( activeClass == 'Register' ? 'active' : ''  ))
                a(href='/users/register') Register
            if !user
              li(class=( activeClass == 'Login' ? 'active' : ''  ))
                a(href='/users/login') Log In
          ul.nav.navbar-nav.navbar-right
            if user
              li
                a(href='/users/logout') Log Out
        .nav-collapse
    .container
      != messages()
      block content

      
    
    // Placed at the end of the document so the pages load faster
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js')
    script(src='javascripts/bootstrap.js')
